    <script type="text/javascript">
    	$(".btn-success").on("click",function(e){
        	if($(".username").val()==""){
            	alert("아이디를 입력하세요");
            	return false;
            	}
        	if($(".password").val()==""){
            	alert("패스워드를 입력하세요");
            	return false;
            	}
        	e.preventDefault();
        	$("form").submit();
        	})
    </script>
    

