<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="com.person.config.Person">	
	<select id="personList" resultType="com.person.model.PersonVO">
		select * from person order by id
	</select>
	
	<insert id="personInsert" parameterType="com.person.model.PersonVO">
		insert into person values(#{id},#{name},#{password},#{gender},#{job})			
	</insert>
	
	<select id="personView" parameterType="String" resultType="com.person.model.PersonVO">
		select * from person where id = #{id}
	</select>
	
	<update id="personUpdate" parameterType="com.person.model.PersonVO">
		update person set name=#{name},password=#{password},gender=#{gender},job=#{job} where id = #{id}		
	</update>
	
	<delete id="personDelete" parameterType="String">
		delete from person where id = #{id}
	</delete>
</mapper>